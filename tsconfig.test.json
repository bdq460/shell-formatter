{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "mocha",
            "node"
        ],
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "#/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
